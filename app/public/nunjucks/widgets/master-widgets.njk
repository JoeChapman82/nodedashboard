{% macro aClock(display) %}
<div class="flex-widget-{{ display }} widget-analogue-clock">
    <canvas id="clock" width="250" height="300">
      Please upgrade your browser.
</canvas>
</div>
{% endmacro %}

{% macro barChart(tableID, dataID, CanvasID, display, x, y, main, title) %}
<table id="{{ tableID }}" class="data-table">
    {% for item in main %}
    <tr>
    <td>{{ item[0] }}</td>
    <td>{{ item[1] }}</td>
    </tr>
    {% endfor %}
</table>
<div class="flex-widget-{{ display }}-double-width widget-bar-chart">
  <div id="{{ dataID }}" data-x="{{ x }}" data-y="{{ y }}" data-title="{{ title }}"></div>
  <canvas id="{{ CanvasID }}" class="bar-chart-display" width="610" height="350"></canvas>
</div>
{% endmacro %}

{% macro calendar(display, calendar) %}
<div class="flex-widget-{{ display }} widget-calendar-events">
  <div class="center-wrapper">
    <div class="icon-background-calendar">
      <i class="fa fa-calendar"></i>
    </div>
  <p class="calender-heading">Todays Events</p>
  {% if calendar.length < 1 %}
  <p class="calendar-event"><i class="fa fa-calendar calendar-icon" aria-hidden="true"></i>
    No events today</p>
 {% else %}
{% for event in calendar %}
<p class="calendar-event"><i class="fa fa-calendar calendar-icon" aria-hidden="true"></i>{{ event.start }}
<br>{{ event.summary }}</p>
{% endfor %}
{% endif %}
  </div>
</div>
{% endmacro %}

{% macro countdown(display, event,dueDate) %}
<div class="flex-widget-{{ display }} canvas-display widget-countdown">
<p class="countdown-event">{{ event }}</p>
<p id="countdownTimerDays" class="countdown-timer-days"><br></p>
<p id="countdownTimerTime" class="countdown-timer-time"></p>
<p id="countdownDueDate" class="countdown-due-date">Due date:<br> {{ dueDate }}</p>
</div>
{% endmacro %}

