      {{ widget.doughnutChart(display, 'labels', 'numbers', pieData, 'Mmm, doughnut') }}
    {% elif item === 'map' %}
      {{ widget.map(display, 'New York', 'Empire State Building') }}
    {% elif item === 'aClock' %}
      {{ widget.aClock(display) }}
    {% elif item === 'countdown' %}
      {{ widget.countdown(display, 'COUNTDOWN TO DINNER','29-Mar-2017 19:00:00') }}
    {% elif item === 'notices' %}
      {{ widget.notices(display, 'PYI Dashboard','Made by DWP Digital') }}
    {% elif item === 'jenkins' %}
      {{ widget.jenkins(display) }}
    {% elif item === 'dClock' %}
      {{ widget.dClock(display) }}
    {% elif item === 'calendar' %}
      {{ widget.calendar(display, calendar) }}
    {% endif %}
  {% endfor %}
