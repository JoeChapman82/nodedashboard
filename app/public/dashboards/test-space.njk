{% block body %}

{{ 'aTest' }}

<div class="flex-wrapper-regular switcher" id="sortable">
  {% for item in widgets %}
    {% if item === 'weather' %}
      {{ widget.weather(display, weatherType, weatherCity, weatherTemp, weatherIcon) }}
    {% elif item === 'pieChart' %}
      {{ widget.pieChart(display, 'labels', 'numbers', pieData, 'Nom, nom, nom') }}
    {% elif item === 'xkcd' %}
