      {{ widget.map(display, 'New York', 'Empire State Building', item.position, item.widget, item.size, item.dataRate) }}
    {% elif item.widget === 'aClock' %}
      {{ widget.aClock(display, item.position, item.widget, item.size, item.dataRate) }}
    {% elif item.widget === 'countdown' %}
      {{ widget.countdown(display, 'COUNTDOWN TO DINNER','29-Mar-2017 19:00:00', item.position, item.widget, item.size, item.dataRate) }}
    {% elif item.widget === 'notices' %}
