    {% elif item.widget === 'dClock' %}
      {{ widget.dClock(display, item.position, item.widget, item.size, item.dataRate) }}
    {% elif item.widget === 'calendar' %}
      {{ widget.calendar(display, calendar, item.position, item.widget, item.size, item.dataRate) }}
    {% endif %}
  {% endfor %}
