    {% elif item.widget === 'progress' %}
      {{ widget.progress(display, '85', item.position, item.widget, item.size, item.dataRate) }}
    {% elif item.widget === 'barChart' %}
      {{ widget.barChart('barTable', 'barDataDiv', 'barCanvas', display, 'Something', 'Something else', dummyData, 'A bar chart - random data', item.position, item.widget, item.size, item.size*305, item.dataRate) }}
