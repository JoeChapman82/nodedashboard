{% macro pieChart(display, x, y, main, title, position, widget, size, rate) %}
<table id="dataChartPie" class="data-table">
    {% for item in main %}
    <tr>
    <td>{{ item[0] }}</td>
    <td>{{ item[1] }}</td>
    </tr>
    {% endfor %}
</table>
<div class="flex-widget-{{ display }}-{{ size }} widget-pieChart" data-position="{{ position }}" data-widget="{{ widget }}" data-display="{{ display }}" data-size="{{ size }}" data-rate="{{ rate }}">
  <div id="pieChartData" data-x="{{ x }}" data-y="{{ y }}" data-title="{{ title }}"></div>
  <canvas id="pieChartDisplay" class="pie-chart-display" width="275" height="360"></canvas>
</div>
{% endmacro %}
